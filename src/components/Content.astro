---
import Copyright from "./Copyright.astro";
import Version from "./Version.astro";
import { SITE_DESCRIPTION } from "../config";
---

<div id="content" class="h-full overflow-y-scroll">
	<div class="w-full h-full flex flex-col items-center">
		<main class="md:filter-none blur-none">
			<div class="opacity-90 drop-shadow-md container relative z-30 mt-24">
				<div class="flex flex-col items-center justify-center lg:flex-row">
					<div
						class="w-screen max-w-5xl mb-12 py-8 px-4 overflow-hidden bg-[#181818] shadow rounded-lg"
					>
						<slot />
					</div>
				</div>
			</div>
		</main>
	</div>
</div>
